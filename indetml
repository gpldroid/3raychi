<a href="#" class="back-to-top" id="backToTop"><i class="fas fa-arrow-up"></i></a>

<script>
// إعدادات متقدمة
const CONFIG = {
    blogUrl: 'https://greatxenforo.blogspot.com',
    maxPosts: 50,
    postsPerPage: 5,
    cacheDuration: 5 * 60 * 1000, // 5 دقائق
    enableAnimations: true
};

// متغيرات عامة
let allPosts = [];
let categories = [];
let currentCategory = 'all';
let currentPage = 0;

// تحميل البيانات مع التخزين المؤقت
async function loadBlogData() {
    const cacheKey = 'blogPosts_' + new Date().toDateString();
    const cached = localStorage.getItem(cacheKey);
    
    if (cached) {
        try {
            const data = JSON.parse(cached);
            allPosts = data.posts;
            categories = data.categories;
            initApp();
            return;
        } catch (e) {
            console.log('Cache error:', e);
        }
    }
    
    // تحميل جديد
    const script = document.createElement('script');
    script.src = `${CONFIG.blogUrl}/feeds/posts/summary?alt=json-in-script&max-results=${CONFIG.maxPosts}&callback=handleBlogData`;
    document.head.appendChild(script);
}

// معالجة البيانات
window.handleBlogData = function(data) {
    allPosts = data.feed.entry || [];
    
    // استخراج التصنيفات الفريدة
    const categoryMap = new Map();
    allPosts.forEach(post => {
        if (post.category) {
            post.category.forEach(cat => {
                if (!categoryMap.has(cat.term)) {
                    categoryMap.set(cat.term, cat);
                }
            });
        }
    });
    categories = Array.from(categoryMap.values());
    
    // تخزين في الكاش
    try {
        localStorage.setItem('blogPosts_' + new Date().toDateString(), 
            JSON.stringify({ posts: allPosts, categories: categories }));
    } catch (e) {}
    
    initApp();
};

// تهيئة التطبيق
function initApp() {
    displayCategories();
    displayTabs();
    displayPosts('all', 0);
    displaySitemap();
    displayFeaturedPosts();
    setupBackToTop();
}

// عرض التصنيفات
function displayCategories() {
    // التصنيفات في الشريط الجانبي
    const sidebarCategories = document.getElementById('categories-sidebar');
    const footerCategories = document.getElementById('footerCategories');
    
    if (sidebarCategories) {
        sidebarCategories.innerHTML = categories.map(cat => `
            <li class="sidebar-item">
                <a href="#" onclick="filterByCategory('${cat.term}'); return false;" class="sidebar-link">
                    <i class="fas fa-folder"></i> ${cat.term}
                </a>
            </li>
        `).join('');
    }
    
    if (footerCategories) {
        footerCategories.innerHTML = categories.slice(0, 5).map(cat => `
            <li><a href="#" onclick="filterByCategory('${cat.term}'); return false;"><i class="fas fa-chevron-left"></i> ${cat.term}</a></li>
        `).join('');
    }
}

// عرض التبويبات
function displayTabs() {
    const tabsHeader = document.getElementById('tabsHeader');
    
    tabsHeader.innerHTML = `
        <button class="tab-btn active" onclick="filterByCategory('all')">الكل</button>
        ${categories.slice(0, 5).map((cat, index) => `
            <button class="tab-btn" onclick="filterByCategory('${cat.term}')">${cat.term}</button>
        `).join('')}
    `;
}

// تصفية حسب التصنيف
window.filterByCategory = function(category) {
    currentCategory = category;
    currentPage = 0;
    
    // تحديث الأزرار
    document.querySelectorAll('.tab-btn, .sidebar-link').forEach(btn => {
        btn.classList.remove('active');
    });
    
    document.querySelectorAll(`[onclick*="${category}"]`).forEach(btn => {
        btn.classList.add('active');
    });
    
    displayPosts(category, 0);
};

// عرض المقالات
function displayPosts(category, page) {
    const panel = document.getElementById('tabPanel');
    const start = page * CONFIG.postsPerPage;
    
    let filteredPosts = category === 'all' 
        ? allPosts 
        : allPosts.filter(post => 
            post.category && post.category.some(c => c.term === category)
        );
    
    const postsToShow = filteredPosts.slice(start, start + CONFIG.postsPerPage);
    
    if (postsToShow.length === 0) {
        panel.innerHTML = '<div style="text-align: center; padding: 50px;">لا توجد مقالات</div>';
        return;
    }
    
    let html = postsToShow.map(post => createPostHTML(post)).join('');
    
    // إضافة زر تحميل المزيد
    if (filteredPosts.length > start + CONFIG.postsPerPage) {
        html += `
            <div class="load-more">
                <button class="load-more-btn" onclick="loadMorePosts()">
                    <i class="fas fa-spinner"></i> تحميل المزيد
                </button>
            </div>
        `;
    }
    
    panel.innerHTML = html;
    
    // تأثيرات الظهور
    if (CONFIG.enableAnimations) {
        document.querySelectorAll('.post-card').forEach((card, index) => {
            card.style.animationDelay = `${index * 0.1}s`;
        });
    }
}

// تحميل المزيد
window.loadMorePosts = function() {
    currentPage++;
    const start = currentPage * CONFIG.postsPerPage;
    
    let filteredPosts = currentCategory === 'all' 
        ? allPosts 
        : allPosts.filter(post => 
            post.category && post.category.some(c => c.term === currentCategory)
        );
    
    const postsToShow = filteredPosts.slice(start, start + CONFIG.postsPerPage);
    const panel = document.getElementById('tabPanel');
    
    // إزالة زر التحميل الحالي
    const loadMoreDiv = panel.querySelector('.load-more');
    if (loadMoreDiv) loadMoreDiv.remove();
    
    // إضافة المقالات الجديدة
    postsToShow.forEach(post => {
        panel.insertAdjacentHTML('beforeend', createPostHTML(post));
    });
    
    // إضافة زر تحميل جديد إذا وجد
    if (filteredPosts.length > start + CONFIG.postsPerPage) {
        panel.insertAdjacentHTML('beforeend', `
            <div class="load-more">
                <button class="load-more-btn" onclick="loadMorePosts()">
                    <i class="fas fa-spinner"></i> تحميل المزيد
                </button>
            </div>
        `);
    }
};

// إنشاء HTML للمقالة
function createPostHTML(post) {
    const title = post.title.$t;
    const link = post.link.find(l => l.rel === 'alternate').href;
    const published = new Date(post.published.$t);
    const dateStr = published.toLocaleDateString('ar-EG', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
    
    // استخراج الملخص
    let summary = '';
    if (post.summary) {
        summary = post.summary.$t.replace(/<[^>]*>/g, '').substring(0, 200);
        if (summary.length >= 200) summary += '...';
    }
    
    // استخراج الصورة
    let image = '';
    if (post.media$thumbnail) {
        image = post.media$thumbnail.url.replace(/\/s\d+-c\//, '/s600-c/');
    } else {
        // البحث عن صورة في المحتوى
        const content = post.content ? post.content.$t : '';
        const imgMatch = content.match(/<img[^>]+src="([^">]+)"/);
        if (imgMatch) {
            image = imgMatch[1];
        }
    }
    
    return `
        <div class="post-card">
            <div class="post-header">
                <div class="post-avatar">
                    <i class="fas fa-user-cog"></i>
                </div>
                <div class="post-author">
                    <div class="post-author-name">مدونة العرائش التقنية</div>
                    <div class="post-date"><i class="far fa-calendar"></i> ${dateStr}</div>
                </div>
            </div>
            <div class="post-content">
                <h3 class="post-title"><a href="${link}">${title}</a></h3>
                ${image ? `<img src="${image}" class="post-image" alt="${title}" loading="lazy">` : ''}
                <p class="post-summary">${summary}</p>
            </div>
            <div class="post-footer">
                <div class="post-stats">
                    <span class="post-stat"><i class="far fa-heart"></i> 0</span>
                    <span class="post-stat"><i class="far fa-comment"></i> 0</span>
                    <span class="post-stat"><i class="far fa-eye"></i> 0</span>
                </div>
                <div class="post-actions">
                    <button class="post-action" onclick="alert('تم تسجيل إعجابك')"><i class="far fa-heart"></i></button>
                    <button class="post-action" onclick="window.open('${link}', '_blank')"><i class="fas fa-share"></i></button>
                </div>
            </div>
        </div>
    `;
}

// عرض خريطة الموقع
function displaySitemap() {
    const grid = document.getElementById('sitemapGrid');
    
    grid.innerHTML = allPosts.slice(0, 6).map(post => {
        const title = post.title.$t;
        const link = post.link.find(l => l.rel === 'alternate').href;
        
        // استخراج الصورة
        let image = '';
        if (post.media$thumbnail) {
            image = post.media$thumbnail.url.replace(/\/s\d+-c\//, '/s200-c/');
        } else {
            image = 'https://via.placeholder.com/200x150?text=مدونة+العرائش';
        }
        
        return `
            <a href="${link}" class="sitemap-item">
                <img src="${image}" alt="${title}" loading="lazy">
                <h4>${title}</h4>
            </a>
        `;
    }).join('');
}

// عرض المقالات المميزة
function displayFeaturedPosts() {
    const container = document.getElementById('featuredPosts');
    
    container.innerHTML = allPosts.slice(0, 4).map(post => {
        const title = post.title.$t;
        const link = post.link.find(l => l.rel === 'alternate').href;
        
        return `
            <div style="margin-bottom: 15px; padding-bottom: 15px; border-bottom: 1px solid rgba(255,255,255,0.1);">
                <a href="${link}" style="color: white; text-decoration: none; font-weight: 600; display: block; transition: var(--transition);">
                    <i class="fas fa-chevron-left" style="margin-left: 8px;"></i> ${title}
                </a>
            </div>
        `;
    }).join('');
}

// إعداد زر العودة للأعلى
function setupBackToTop() {
    const btn = document.getElementById('backToTop');
    
    window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
            btn.classList.add('visible');
        } else {
            btn.classList.remove('visible');
        }
    });
    
    btn.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({ top: 0, behavior: 'smooth' });
    });
}

// معالجة النشرة البريدية
document.getElementById('newsletterForm')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const email = e.target.querySelector('input').value;
    alert(`شكراً للاشتراك! تم تسجيل البريد: ${email}`);
    e.target.reset();
});

// بدء التحميل
loadBlogData();

// تحديث سنة حقوق النشر
document.querySelector('.copyright').innerHTML = `&copy; ${new Date().getFullYear()} مدونة العرائش التقنية. جميع الحقوق محفوظة`;
</script>

</body>
</html>
